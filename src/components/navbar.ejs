<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navbar Example</title>
    <link href="../public/css/tailwind-output.css" rel="stylesheet" />
    <style>
      /* Additional styles can be added here if needed */
    </style>
  </head>
  <body>
    <nav
      class="relative z-20 bg-white w-full md:static md:text-sm md:border-none border-b border-gray-500"
    >
      <div
        class="items-center gap-x-14 px-4 max-w-screen-xl mx-auto md:flex md:px-8"
      >
        <div class="flex items-center justify-between py-3 md:py-5 md:block">
          <a href="/">
            <img
              src="../public/assets/Logos/loc.svg"
              width="50"
              height="50"
              alt="Float UI logo"
            />
          </a>
          <div class="md:hidden">
            <button class="text-gray-500 hover:text-gray-800" id="menuToggle">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 menu-icon"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
                  clip-rule="evenodd"
                />
              </svg>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 close-icon hidden"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </button>
          </div>
        </div>
        <div
          class="nav-menu flex-1 pb-3 mt-8 md:block md:pb-0 md:mt-0 hidden"
          id="navMenu"
        >
          <ul class="items-center space-y-6 md:flex md:space-x-6 md:space-y-0">
            <li class="border-b border-gray-200">
              <a
                href="/pharmacie"
                class="block text-gray-700 hover:text-indigo-600"
                >Pharmacies</a
              >
            </li>
            <li class="border-b border-gray-200">
              <a
                href="/cabinet"
                class="block text-gray-700 hover:text-indigo-600"
                >Cabinet</a
              >
            </li>
            <li class="border-b border-gray-200">
              <a
                href="/docteur"
                class="block text-gray-700 hover:text-indigo-600"
                >Doctor</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div
      class="z-10 fixed top-0 left-0 w-screen h-screen bg-white md:hidden hidden"
      id="mobileBackdrop"
    ></div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const menuToggle = document.getElementById("menuToggle");
        const navMenu = document.getElementById("navMenu");
        const mobileBackdrop = document.getElementById("mobileBackdrop");
        const menuIcon = document.querySelector(".menu-icon");
        const closeIcon = document.querySelector(".close-icon");

        menuToggle.addEventListener("click", function () {
          navMenu.classList.toggle("hidden");
          mobileBackdrop.classList.toggle("hidden");
          menuIcon.classList.toggle("hidden");
          closeIcon.classList.toggle("hidden");
        });

        mobileBackdrop.addEventListener("click", function () {
          navMenu.classList.add("hidden");
          mobileBackdrop.classList.add("hidden");
          menuIcon.classList.remove("hidden");
          closeIcon.classList.add("hidden");
        });
      });
    </script>
  </body>
</html>
